            a(href="#").twitter-logo
                img(src="img/twitter.png" alt="facebook-logo" title="social-network")
            a(href="#")
                img(src="img/vk.png" alt="facebook-logo" title="social-network")
        .right-side.footer-bottom__item
            span
                span by
                span.develop-company OTAKOYI
                img(src="img/otakoyi-logo.png" alt="developers logo")
